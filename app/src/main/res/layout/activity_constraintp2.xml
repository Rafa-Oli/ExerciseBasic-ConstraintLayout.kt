<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/cappuccino"
        android:layout_width="0dp"
        android:layout_height="130dp"
        android:background="#855E53"
        android:padding="30dp"
        android:text="Cappuccino"
        android:textAlignment="center"
        android:textColor="#fff"
        android:textSize="30dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/relogio"
        android:layout_width="54dp"
        android:layout_height="47dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="40dp"
        android:src="@drawable/rel"
        android:tint="#855E53"
        app:layout_constraintHorizontal_chainStyle="spread"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/love"

        app:layout_constraintTop_toBottomOf="@id/cappuccino"

        />

    <ImageView
        android:id="@+id/love"
        android:layout_width="54dp"
        android:layout_height="47dp"
        android:layout_marginLeft="4dp"
        android:src="@drawable/love"

        android:tint="#855E53"
        app:layout_constraintHorizontal_chainStyle="spread"
        app:layout_constraintLeft_toRightOf="@id/relogio"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/relogio" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="101dp"
        android:layout_marginTop="4dp"
        android:text="15 minutos"
        android:textAlignment="center"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/relogio" />

    <TextView
        android:id="@+id/textRelogio"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="269dp"
        android:layout_marginTop="3dp"
        android:text="54214"
        android:textAlignment="center"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/love" />

    <View
        android:id="@+id/view"
        android:layout_width="366dp"
        android:layout_height="3dp"
        android:layout_marginStart="22dp"
        android:layout_marginTop="20dp"
        android:background="#855E53"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textRelogio" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="353dp"
        android:layout_height="60dp"
        android:layout_marginLeft="22dp"
        android:layout_marginTop="20dp"
        android:text="Uma simples e perfeita extraÃ­da dose de expresso misturado com leite fresco e chocolate fazem esta bebida deliciosa."
        android:textAlignment="center"
        android:textSize="14dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/view" />
    <TextView
        android:id="@+id/ingredientes"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
       android:layout_marginStart="16dp"
        android:layout_marginTop="20dp"
        android:text="Ingredientes"
        android:textAlignment="center"
        android:textSize="25dp"
       android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textView" />
    <ImageView
android:id="@+id/seta1"
        android:layout_width="30dp"
        android:layout_height="12dp"
        android:layout_marginLeft="10dp"
        android:src="@drawable/seta"
      android:layout_marginTop="10dp"
        android:tint="#855E53"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintVertical_chainStyle="spread"
        app:layout_constraintTop_toBottomOf="@id/ingredientes" />
    <ImageView
android:id="@+id/seta2"
        android:layout_width="30dp"
        android:layout_height="12dp"
        android:layout_marginLeft="10dp"
        android:src="@drawable/seta"
        android:layout_marginTop="10dp"
        android:tint="#855E53"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintVertical_chainStyle="spread"
        app:layout_constraintTop_toBottomOf="@id/seta1" />
    <ImageView

        android:layout_width="30dp"
        android:layout_height="12dp"
        android:layout_marginLeft="10dp"
        android:src="@drawable/seta"
        android:layout_marginTop="10dp"
        android:tint="#855E53"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintVertical_chainStyle="spread"
        app:layout_constraintTop_toBottomOf="@id/seta2" />



</androidx.constraintlayout.widget.ConstraintLayout>